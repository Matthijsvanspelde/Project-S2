@model SocialNetwork.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="VerifyUser">
    <div asp-validation-summary="ModelOnly"></div>
    <input asp-for="Username" placeholder="Username" /><br />
    <span asp-validation-for="Username"></span><br />
    <input asp-for="Password" placeholder="Password" /><br />
    <span asp-validation-for="Password"></span><br />
    <input type="submit" value="Create" class="btn btn-default" />
</form>

<div>
    <a asp-action="Register">Register</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
