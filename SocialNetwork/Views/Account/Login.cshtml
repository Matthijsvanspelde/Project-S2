@model SocialNetwork.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="title-container">
    <h2>Social Network</h2>
</div>
<div class="form-container">
    <a>Login</a>
    @Model.ErrorMessage

    <form asp-action="VerifyUser">
        <div asp-validation-summary="ModelOnly"></div>
        <span asp-validation-for="Username"></span><br />
        <input asp-for="Username" placeholder="Username" class="inputField"/><br />
        <span asp-validation-for="Password"></span><br />
        <input asp-for="Password" placeholder="Password" class="inputField"/><br />
        <input type="submit" value="Sign In" class="inputButton" />
    </form>
    <div class="form-action">
        <a asp-action="Register">Register</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
