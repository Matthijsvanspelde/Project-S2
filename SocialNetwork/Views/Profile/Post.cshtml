@model SocialNetwork.ViewModels.PostViewModel

@{
    ViewData["Title"] = "Post";
}
<partial name="_Menu">
    <div class="post-form">
        <h2>Post</h2>
        <form asp-action="Post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Title" class="inputField" placeholder="Title"/><br />
            <span asp-validation-for="Title"></span><br />
            <textarea asp-for="Message" class="postField" placeholder="Write something..."></textarea><br />
            <span asp-validation-for="Message"></span><br />
            <input type="submit" value="Post" class="inputButton" />
        </form>

    </div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
